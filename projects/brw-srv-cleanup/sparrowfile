bash "docker exec -it brw-srv bash -c 'truncate -s 0 ~/.sparky/sparkyd.log'";
bash "docker exec -it brw-srv bash -c 'truncate -s 0 ~/.sparky/sparky-web.log'";

bash "docker exec -it agent bash -c 'truncate -s 0 ~/.sparky/sparkyd.log' || :";
bash "docker exec -it agent bash -c 'truncate -s 0 ~/.sparky/sparky-web.log' || :";
