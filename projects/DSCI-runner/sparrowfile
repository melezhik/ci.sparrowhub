#!raku

bash "git branch --set-upstream-to=origin/main main", %(
  cwd => "{%*ENV<HOME>}/projects/dsci-runner",
);
git-scm tags()<SCM_URL>, %(
  to => "{%*ENV<HOME>}/projects/dsci-runner",
  branch => tags<SCM_BRANCH>
);

bash "raku -MSparrow6::DSL -e 1 && bash ./sync.sh", %(
  cwd => "{%*ENV<HOME>}/projects/dsci-runner",
);
