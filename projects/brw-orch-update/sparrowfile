directory "scm";

git-scm "https://github.com/melezhik/brownie.git", %(
  to => "scm",
);

bash "raku -MSparrow6::DSL -c sparrowfile", %(
  cwd => "{$*CWD}/scm/orchestrator"
);

bash "bash ./sync.sh", %(
  cwd => "{$*CWD}/scm/orchestrator"
);

bash "raku -MSparrow6::DSL -c sparrowfile", %(
  cwd => "{$*CWD}/scm/reporter"
);

bash "bash ./sync.sh", %(
  cwd => "{$*CWD}/scm/reporter"
);

